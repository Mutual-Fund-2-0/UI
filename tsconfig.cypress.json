{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["cypress", "@testing-library/cypress", "node"],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.d.ts",
    "cypress/**/*.vue",
    "cypress/support/**/*.ts",
    "./cypress.d.ts"    
  ]
}
